#ifndef __UNICO_VERSION_H__
#define __UNICO_VERSION_H__

#include <glib.h>

G_BEGIN_DECLS

/* The major version of unico at compile time. */
#define UNICO_VERSION_MAJOR (@PACKAGE_VERSION_MAJOR@)

/* The minor version of unico at compile time. */
#define UNICO_VERSION_MINOR (@PACKAGE_VERSION_MINOR@)

/* The micro version of unico at compile time. */
#define UNICO_VERSION_MICRO (@PACKAGE_VERSION_MICRO@)

/* The nano version of unico at compile time, actual releases have
 * 0, Bazaar trunk check-outs have 1, pre-release versions have [2-n]. */
#define UNICO_VERSION_NANO (@PACKAGE_VERSION_NANO@)

G_END_DECLS

#endif /* __UNICO_VERSION_H__ */
